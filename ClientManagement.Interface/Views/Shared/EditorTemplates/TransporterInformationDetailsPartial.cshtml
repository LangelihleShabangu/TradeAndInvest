@model ClientManagement.DomainModel.TransporterModel
@{
    ViewBag.Breadcramb = "ContactInformation";
}

    @Html.HiddenFor(model => model.TransporterId)   

    <div class="tab-content">

        <div class="panel-body">

            <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">
                            Type of Vehicle :
                        </label>
                    </div>
                    <div class="form-group">
                        @Html.DropDownList("TypeofVehicleId", new SelectList(ClientManagement.BusinessLogic.GlobalAmin.GetTypeofVehicleInfo(Model.TypeofVehicleList), "Value", "Text", Model.ContactInformationDetails.CompanyId), new { @class = "form-control search-select" })
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">
                             LIcence Code :
                        </label>
                    </div>
                    <div class="form-group">
                        @Html.DropDownList("LicenceCodeId", new SelectList(ClientManagement.BusinessLogic.GlobalAmin.GetLIcenceCodeInfo(Model.LicenceCodeList), "Value", "Text", Model.LicenceCodeId), new { @class = "form-control search-select" })
                    </div>
                </div>                

                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">
                            Registration Number :  <span class="symbol required"></span>
                        </label>
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.RegistrationNumber, new { @class = "form-control",  @placeholder = "Registration Number", @required = "required" })
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">
                            Color :  <span class="symbol required"></span>
                        </label>
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.Color, new { @class = "form-control",  @placeholder = "Color" })
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">
                            Vin Number:  <span class="symbol required"></span>
                        </label>
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.VinNumber, new { @class = "form-control", @placeholder = "Vin Number" })
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">
                            Designated Driver:  <span class="symbol required"></span>
                        </label>
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.DesignatedDriver, new { @class = "form-control", @placeholder = "Designated Driver" })
                    </div>
                </div>

            </div>
        </div>




