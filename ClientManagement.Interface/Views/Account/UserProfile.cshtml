@model Techhill.Framework.DomainTypes.Account.UserProfileModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    function OpenChangePassword() {
        $('#changePasswordModal').load('@Url.Action("ChangePassword", "Account")' + '?username=' + '@Model.UserName', function () {
            $('#changePasswordModal').modal('show');
        });
    }
</script>

@using (Html.BeginForm())
{
    <div class="panel-heading">
        <i></i>Roles Information Capture
    </div>

    <div class="tab-content">
     
            <div class="panel-body">
                <div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">
                                @Html.LabelFor(m => m.UserName)
                            </label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                        </div>
                    </div>

                    @if (Model.UserID == 0)
                    {
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">
                                    @Html.LabelFor(m => m.Password)
                                </label>
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
                            </div>
                        </div>
                    }
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">
                                @Html.LabelFor(m => m.FirstName)
                            </label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">
                                @Html.LabelFor(m => m.LastName)
                            </label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">
                                @Html.LabelFor(m => m.Telephone)
                            </label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Telephone, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">
                                @Html.LabelFor(m => m.Cellphone)
                            </label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Cellphone, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">
                                @Html.LabelFor(m => m.Email)
                            </label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div style="margin-left: 2px">
                            <button type="submit" class="btn btn-success">Save</button>
                            <button type="button" class="btn btn-red" onclick="OpenChangePassword()">Change Password</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
   
}
<div class="modal fade" id="changePasswordModal" tabindex="-1" role="dialog" aria-hidden="true"></div>


