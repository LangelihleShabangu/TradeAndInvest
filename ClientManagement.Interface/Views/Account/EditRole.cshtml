@model Techhill.Framework.DomainTypes.Account.RoleModel
@{
    //   ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Breadcramb = "Edit Role";
}
@using (Html.BeginForm("EditRole", "Account"))
{
    
    @Html.HiddenFor(m => m.RoleID)

    <div class="kt-container  kt-grid__item kt-grid__item--fluid">
        <div class="row">
            <div class="col-md-12">

                <!--begin::Portlet-->
                <div class="kt-portlet">
                    <div class="kt-portlet__head">
                        <div class="kt-portlet__head-label">
                            <h3 class="kt-portlet__head-title">Roles Information Capture</h3>
                        </div>
                    </div>
                                        <!--begin::Form-->
                    <div class="kt-portlet__body">

                        <div class="form-group">
                            <label>Name </label>
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", required = "required" })
                        </div>
                        <div class="form-group">
                            <label>Description </label>
                            @Html.TextBoxFor(m => m.Description, new { @class = "form-control", required = "required" })
                        </div>
                        <div class="form-group">
                            <label>Active </label>
                            @Html.CheckBoxFor(m => m.IsActive, new { @class = "kt-checkbox" })
                        </div>

                        <div class="kt-form__actions">
                            <button type="submit" class="btn btn-success">Save</button>
                            <a href="@Url.Action("RoleModule", new { id = Model.RoleID })" class="btn btn-primary">Edit Modules</a>
                            <a href="@Url.Action("Roles")" class="btn btn-primary">Back</a>
                        </div>

                    </div>   
                    <!--end::Form-->
                </div>

            </div>

        </div>

    </div>
}

   