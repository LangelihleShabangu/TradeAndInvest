@model UserLoginModel
@{
    Layout = null;
}


<!DOCTYPE html>

<!--

-->
<html lang="en">

<!-- begin::Head -->
<head>
    <base href="../../">
    <meta charset="utf-8" />
    <title>Portal</title>
    <meta name="description" content="User login">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!--begin::Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700">

    <!--end::Fonts -->
    <!--begin::Page Custom Styles(used by this page) -->
    <link rel="stylesheet" href="@Url.Content("~/Newassets/css/pages/login/login-v2.css")">

    <!--end::Page Custom Styles -->
    <!--begin::Global Theme Styles(used by all pages) -->
    <link rel="stylesheet" href="@Url.Content("~/Newassets/plugins/global/plugins.bundle.css")">
    <link rel="stylesheet" href="@Url.Content("~/Newassets/css/style.bundle.css")">

    <!--end::Global Theme Styles -->
    <!--begin::Layout Skins(used by all pages) -->
    <!--end::Layout Skins -->
    <link rel="shortcut icon" href="Newassets/media/logos/favicon.ico" />
</head>

<!-- end::Head -->
<!-- begin::Body -->
<body class="kt-login-v2--enabled kt-login-v2--enabled kt-quick-panel--right kt-demo-panel--right kt-offcanvas-panel--right kt-header--fixed kt-header--minimize-menu kt-header-mobile--fixed kt-subheader--enabled kt-subheader--transparent kt-page--loading">

    <!-- begin::Page loader -->
    <!-- end::Page Loader -->
    <!-- begin:: Page -->
    <div class="kt-grid kt-grid--ver kt-grid--root">
        <div class="kt-grid__item   kt-grid__item--fluid kt-grid  kt-grid kt-grid--hor kt-login-v2" id="kt_login_v2">

            <!--begin::Item-->
            <div class="kt-grid__item  kt-grid--hor">

                <!--begin::Heade-->
                <div class="kt-login-v2__head">
                    <div class="kt-login-v2__logo">
                        <a href="#">
                        </a>
                    </div>
                    <div class="kt-login-v2__signup">
                        <span>Don't have an account?</span>
                        <a href="@Url.Action("Register", "Register")" class="kt-link kt-font-brand">Sign Up</a>
                    </div>
                </div>

                <!--begin::Head-->
            </div>

            <!--end::Item-->
            <!--begin::Item-->
            <div class="kt-grid__item  kt-grid  kt-grid--ver  kt-grid__item--fluid">

                <!--begin::Body-->
                <div class="kt-login-v2__body">

                    <!--begin::Wrapper-->
                    <div class="kt-login-v2__wrapper">
                        <div class="kt-login-v2__container">
                            <div class="kt-login-v2__title" style="color:black">
                                <h3>Sign to Account</h3>
                                <img alt="Logo" src="https://www.asp-ethagribizdb.com/CoJ.png" class="kt-header__brand-logo-default" width="300px" />
                            </div>

                            <!--begin::Form-->
                            <div class="kt-login-v2__form kt-form" style="color:black">

                                @using (Html.BeginForm("Login", "Account", new { }, FormMethod.Post))
                                {
                                    <div class="kt-login-v2__actions">
                                        <h5 class="kt-link kt-link--brand" style="color:black">
                                            Username
                                        </h5>

                                    </div>
                                    <div class="form-group" style="color:black">
                                        @Html.TextBoxFor(a => a.Username, null, new { @class = "form-control", name = "username", placeholder = "Username", autocomplete = "off" })
                                    </div>
                                    <div class="kt-login-v2__actions">
                                        <h5 class="kt-link kt-link--brand" style="color:black">
                                            Password
                                        </h5>

                                    </div>
                                    <div class="form-group" style="color:black">
                                        @Html.TextBoxFor(a => a.Userpassword, null, new { @class = "form-control", type = "password", name = "password", placeholder = "Password", autocomplete = "off" })
                                    </div>

                                    <!--begin::Action-->
                                    <div class="kt-login-v2__actions">
                                        <a href="@Url.Action("ForgotPassword", "Register")" class="kt-link kt-link--brand" style="color:blue">
                                            Forgot Password ?
                                        </a>
                                        <button type="submit" class="btn btn-brand btn-success btn-pill">Sign In</button>
                                    </div>
                                    @Html.ValidationSummary(string.Empty, new { @class = "alert alert-block" })
                                }
                                <!--end::Action-->
                            </div>

                            <!--end::Action-->
                            <!--end::Form-->
                            <!--begin::Separator-->
                            <div class="kt-separator kt-separator--space-lg  kt-separator--border-solid"></div>

                            <!--end::Separator-->
                            <!--begin::Options-->

                            <div class="kt-login-v2__form kt-form" style="color:black">


                                <a href="@Url.Action("Register", "Register")" class="btn btn-twitter btn-pill">

                                    Sign Up
                                </a>

                            </div>

                            <!--end::Options-->
                        </div>
                    </div>

                    <!--end::Wrapper-->
                    <!--begin::Image-->
                    <div class="kt-login-v2__wrapper">

                        <img alt="Logo" src="https://www.asp-ethagribizdb.com/JHB.jpg" width="100%" />

                        <!--<img alt="Logo" src="~/Newassets/media/company-logos/CoJ.png" class="kt-header__brand-logo-default"  width="310px"/>-->
                    </div>

                    <!--begin::Image-->
                </div>

                <!--begin::Body-->
            </div>

            <!--end::Item-->
            <!--begin::Item-->
            <div class="kt-grid__item">
                <div class="kt-login-v2__footer">
                    <div class="kt-login-v2__link">
                        <a href="#" class="kt-link kt-font-brand">Privacy</a>
                        <a href="#" class="kt-link kt-font-brand">Legal</a>
                        <a href="#" class="kt-link kt-font-brand">Contact</a>
                    </div>
                    <div class="kt-login-v2__info">
                        <a href="#" style="color:black">&copy; Rifumo Holdings</a>
                    </div>
                </div>
            </div>

            <!--end::Item-->
        </div>
    </div>

    <!-- end:: Page -->
    <!-- begin::Global Config(global config for global JS sciprts) -->
    <script>
        var KTAppOptions = {
            "colors": {
                "state": {
                    "brand": "#4d5cf2",
                    "metal": "#c4c5d6",
                    "light": "#ffffff",
                    "accent": "#00c5dc",
                    "primary": "#5867dd",
                    "success": "#34bfa3",
                    "info": "#36a3f7",
                    "warning": "#ffb822",
                    "danger": "#fd3995",
                    "focus": "#9816f4"
                },
                "base": {
                    "label": [
                        "#c5cbe3",
                        "#a1a8c3",
                        "#3d4465",
                        "#3e4466"
                    ],
                    "shape": [
                        "#f0f3ff",
                        "#d9dffa",
                        "#afb4d4",
                        "#646c9a"
                    ]
                }
            }
        };
    </script>

    <!-- end::Global Config -->
    <!--begin::Global Theme Bundle(used by all pages) -->
    <script src="@Url.Content("~/Newassets/plugins/global/plugins.bundle.js")"></script>
    <script src="@Url.Content("~/Newassets/js/scripts.bundle.js")"></script>

    <!--end::Global Theme Bundle -->
    <!--begin::Page Scripts(used by this page) -->
    <script src="@Url.Content("~/Newassets/js/pages/custom/user/login.js")"></script>

    <!--end::Page Scripts -->
</body>

<!-- end::Body -->
</html>