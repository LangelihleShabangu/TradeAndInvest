@model ClientManagement.DomainModel.CreditorModel
@{
    ViewBag.Breadcramb = "Creditor Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("CreateEditCreditorData", "Creditor", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(model => model.CreditorId)


 <div class="panel panel-inverse">
        <div class="panel-heading">
            <div class="panel-heading-btn">
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
                 @if (Model.CreditorList.Count() == 0)
                 {
                    <a href="@Url.Action("CreateCreditor", "Creditor", new { Creditor = 0 })" role="button" class="btn btn-xs btn-icon btn-circle btn-success"><i class="fa fa-plus"></i></a>
                 }
            </div>
            <h4 class="panel-title">Service Provider Details</h4>
        </div>       

       <div class="panel-body">

            <div class="col-md-3">
                <div class="form-group">
                    <label class="control-label">
                        Name : <span class="symbol required"></span>
                    </label>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Name" })
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                    <label class="control-label">
                        Moto Message : <span class="symbol required"></span>
                    </label>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.Description, new { @class = "form-control", @placeholder = "Description" })
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                    <label class="control-label">
                        Interest Rate : <span class="symbol required"></span>
                    </label>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.InterestRate, new { @class = "form-control", @placeholder = "InterestRate" })
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                    <label class="control-label">
                        Upload file :
                    </label>
                </div>
                <div class="form-group">
                    <input type="file" name="file" id="file" />
                    @if (Model.CreditorImage != null)
                    {
                        <img src="@String.Format("data:image/gif;base64,{0}", Convert.ToBase64String(Model.CreditorImage))" width="20%" />
                        <br />
                    }
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group">
                    <table>
                        <tr><td>&nbsp;</td></tr>
                        <tr>
                            <td>Add Banking Details :</td>
                            <td width="20px"></td>
                            <td>@Html.CheckBoxFor(m => m.IsVerified, new { @class = "flat-green form-control" })</td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label">
                        Total Capital : <span class="symbol required"></span>
                    </label>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.TotalBudget, new { @class = "form-control", @placeholder = "TotalBudget" })
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label">
                        Color : <span class="symbol required"></span>
                    </label>
                </div>
                <div class="form-group">
                    @if (Model.Color == null)
                    {
                        <input type="text" id="colorpicker" name="color" value= "#123456" required />
                    }
                    else
                    {
                        <input type="text" id="colorpicker" name="color" value=@Model.Color required />
                    }
                </div> 
                </div>
           @* </div>*@

            @*<div class="col-md-12">
                    <div class="form-group">
                        <label class="control-label">
                            Color : <span class="symbol required"></span>
                        </label>
                    </div>
                    <div class="form-group">
                        <input type="text" id="color" name="color" value="#123456" />
                        @Html.TextBox("Description",value = "#123456", new { @class = "form-control", @placeholder = "Description", @Type = "text", @id = "color", @Value = "#123456" })
                    </div>
                </div>*@

            <div class="col-md-12">
                <div class="form-group">
                    <label class="control-label">
                        Select Color : <span class="symbol required"></span>
                    </label>
                </div>
                <div class="form-group">
                    <div id="picker">
                    </div>
                </div>
            </div>

            <div class="row">

                <div class="col-sm-12">
                    <div class="panel panel-inverse">
                        <div class="panel-heading">
                            <div class="panel-heading-btn">
                                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>                
                            </div>
                            <h4 class="panel-title">Address</h4>
                        </div>       

                       <div class="panel-body">
                                @Html.EditorFor(model => model.AddressDetails, "AddressPartial")
                            </div>
                        </div>
                    </div>

                <div class="col-sm-12">
                    <div class="panel panel-inverse">
                        <div class="panel-heading">
                            <div class="panel-heading-btn">
                                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>                
                            </div>
                            <h4 class="panel-title">Banking Details</h4>
                        </div>     
                        <div class="panel-body">
                            @Html.EditorFor(model => model.BankingDetailsInfo, "BankingDetailsPartial")
                        </div>
                    </div>
                </div>

            </div>

            <div class="col-md-12">
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <button class="btn btn-sm btn-success" type="submit">Save</button>
            </div>
        </div>
    </div>    
}


