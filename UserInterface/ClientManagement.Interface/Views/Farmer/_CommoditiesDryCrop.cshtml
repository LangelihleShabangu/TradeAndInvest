<script>

    function RemoveDryCrop(CommodityDryCropId) {
        $.ajax({
            cache: false,
            type: "GET",
            data: {
                CommodityDryCropId: CommodityDryCropId
            },
            url: '@Url.Action("DeleteDryCrop", "Farmer")',
            success: function (data) {
                window.location.href = '@Url.Action("DryCrop", "Farmer")' + '?FarmerId=' + '@Model.FarmerId';
            }
        });
    }

    function SaveDryCrop() {
        onBegin();
        $.ajax({
            cache: false,
            type: "GET",
            data: {
                FarmerId: '@Model.FarmerId',
                ProductInfoId: $("#ProductInfoId").val(),
                DryCropAvarageIncomeperAnnum: $("#DryCropAvarageIncomeperAnnum").val(),
                Typeofproduction: $("#Typeofproduction").val(),
                AverageIncome: $("#AverageIncome").val(),
                Government: $("#Government").val(),
                Informal: $("#Informal").val(),
                Formal: $("#Formal").val()
            },
            url: '@Url.Action("SaveDryCrop", "Farmer")',
            success: function (data) {
                onComplete();
                $("#kt_toast_toggle_1").click();
                window.location.href = '@Url.Action("DryCrop", "Farmer")' + '?FarmerId=' + '@Model.FarmerId';
            }
        });
    }
</script>

<script type="text/javascript">
    function onBegin() {
        $("#wait").css("display", "block");
    }
    function onComplete() {
        $("#wait").css("display", "none");
    }
</script>
