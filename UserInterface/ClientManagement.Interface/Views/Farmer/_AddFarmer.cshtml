            type: "GET",
            data: {
                CompanyId: $("#CompanyId").val(),
                AddressId:'@Model.AddressId',
                FarmerId: '@Model.FarmerId',
                ContactInformationId: '@Model.ContactInformationId',
                FirstName: $("#FirstName").val(),
                Surname: $("#Surname").val(),
                IdNumber: $("#IdNumber").val(),
                CellNumber: $("#CellNumber").val(),
                PhoneNumber: $("#PhoneNumber").val(),
                Email: $("#Email").val(),
                AddressLine1: $("#AddressLine1").val(),
                AddressLine2: $("#AddressLine2").val(),
                AddressLine3: $("#AddressLine3").val(),
                AddressLine4: $("#AddressLine4").val()
            },
            url: '@Url.Action("UpdateFarmer", "Farmer")',
            success: function (data) {
                onComplete();
                $("#kt_toast_toggle_1").click();
                window.location.href = '@Url.Action("TradingDetails", "Farmer")' + '?FarmerbyId=' + '@Model.FarmerId';
            }
        });
    }
</script>

