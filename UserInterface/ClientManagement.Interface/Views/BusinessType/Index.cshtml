@model ClientManagement.DomainModel.BusinessTypeModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}  

<script>
    MenuSelected('AdminInformation');
</script>
<link href="~/Content/StyleSheet.css" rel="stylesheet" />

<div class="panel panel-default">

        <div class="panel-heading">
            <i></i> Business Type Details
            <div class="panel-tools">                
                <a class="btn btn-xs btn-green" href="@Url.Action("CreateBusinessType", "BusinessType", new { BusinessTypeId = Model.BusinessTypeId })"><i class="fa fa-plus"></i></a>
            </div>
        </div>        
    </div>
        <div class="panel-body" style="border: solid; border-color:black">
            <table class="table table-striped table-bordered table-hover table-full-width" id="sample_1">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.BusinessTypeList)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>
                                @using (Html.BeginForm("CreateEditBusinessType", "BusinessType", new { BusinessTypeId = item.BusinessTypeId }))
                                {
                                    <input type="submit" name="submitbtn" class="btn btn-xs btn-teal tooltips" data-placement="top" data-original-title="Edit" value="Edit" />

                                    <a href="#@item.BusinessTypeId" class="btn btn-xs btn-red" data-toggle="modal"><i class="fa fa-trash-o"></a>

                                    <div class="modal fade" id="@item.BusinessTypeId" data-backdrop="static" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div id="users" class="modal-body">
                                                    <p>Are you sure you want to delete this item?</p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button aria-hidden="true" data-dismiss="modal" class="btn btn-sm btn-default">
                                                        Close
                                                    </button>
                                                    <input type="submit" name="submitbtn" class="btn btn-red tooltips" data-placement="top" data-original-title="Remove" value="Remove" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>




