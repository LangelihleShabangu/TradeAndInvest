@model ClientManagement.DomainModel.ClientAccountRegistrationModel

<script>
    jQuery(document).ready(function () {
        Main.init();
        FormElements.init();
    });
</script>

<link href="~/Content/StyleSheet.css" rel="stylesheet" />

@using (Html.BeginForm("CreateClientAccountRegistrationGeneral", "Client", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(model => model.ClientId)

    @Html.HiddenFor(model => model.ClientAccountRegistrationId)

      <div class="panel panel-inverse">
        <div class="panel-heading">
            <div class="panel-heading-btn">
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>                
            </div>
            <h4 class="panel-title">Client Information</h4>
        </div>       

        <div class="panel-body">

            <div class="col-md-3">
                <div class="form-group">
                    <label class="control-label">
                        Account Number :
                    </label>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.AccountNumber, new { @class = "form-control", @placeholder = "Account Number", @required = "required" })
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                    <label class="control-label">
                        Start Payment Date :
                    </label>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.StartPaymentDate, new { @class = "form-control date-picker", @placeholder = "Start Payment Date", @min = "1900-01-01" })
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                    <label class="control-label">
                        Amount :
                    </label>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.Amount, new { @class = "form-control", @placeholder = "Amount", @min = "100" })
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                    <label class="control-label">
                        Terms in Months :
                    </label>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.Terms, new { @class = "form-control", @placeholder = "Terms", type = "number", @min = "1" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label">
                        Deposit :
                    </label>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.Deposit, new { @class = "form-control", @placeholder = "Deposit" })
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label">
                        Insurance :
                    </label>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.Insurance, new { @class = "form-control", @placeholder = "Insurance" })
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group">
                    <label class="control-label">
                        Initiation Fee :
                    </label>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.InitiationFee, new { @class = "form-control", @placeholder = "Insurance" })
                </div>
            </div> 
           
            <div class="col-md-12">
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <button class="btn btn-sm btn-success" type="submit">Save</button>
            </div>

        </div>
    </div>

}




