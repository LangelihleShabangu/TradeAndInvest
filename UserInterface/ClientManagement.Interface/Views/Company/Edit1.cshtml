@model ClientManagement.DomainModel.CompanyDomainModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";  
}


@using (Html.BeginForm("CreateEditCompany", "Company"))
{
    <div class="panel panel-default">
        @Html.HiddenFor(model => model.CompanyId)
        @Html.HiddenFor(model => model.MunicipalityId)

        <div class="panel panel-inverse">
            <div class="panel-heading">               
                <h4 class="panel-title">Branch Details</h4>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">
                                Branch Name :  <span class="symbol required"></span>
                            </label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.RegisteredName, new { @class = "form-control", @placeholder = "Association Name " })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">
                                Province :  <span class="symbol required"></span>
                            </label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Province, new { @class = "form-control", @placeholder = "Province", @disabled = "disabled" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">
                                Region :  <span class="symbol required"></span>
                            </label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Region, new { @class = "form-control", @placeholder = "Region", @disabled = "disabled" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">
                                Branch :  <span class="symbol required"></span>
                            </label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Municipality, new { @class = "form-control", @placeholder = "Municipality", @disabled = "disabled" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">
                                Company Registration Number :<span class="symbol required"></span>
                            </label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.CompanyRegistrationNumber, new { @class = "form-control", @placeholder = "Company Registration Number " })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">
                                Expiary Date : <span class="symbol required"></span>
                            </label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.ExpiaryDate, new { @class = "form-control date-picker", @placeholder = "Inception Date " })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">
                                Email Address : <span class="symbol required"></span>
                            </label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.EmailAddress, new { @class = "form-control", @placeholder = "Email Address " })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">
                                Contact Number : <span class="symbol required"></span>
                            </label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.ContactNumber, new { @class = "form-control", @placeholder = "Contact Number" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">
                                Cell phone Number : <span class="symbol required"></span>
                            </label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.CellphoneNumber, new { @class = "form-control", @placeholder = "Cellphone Number " })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">
                                Website : <span class="symbol required"></span>
                            </label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Website, new { @class = "form-control", @placeholder = "Http:// " })
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="panel panel-inverse">
                            <div class="panel-heading">                                
                                <h4 class="panel-title">Physical Address</h4>
                            </div>
                            <div class="row">
                                @Html.EditorFor(model => model.PhysicalAddressDetails, "AddressPartial")
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
}

<div class="panel panel-inverse">
    <div class="panel-heading">        
        <h4 class="panel-title">Branch Details</h4>
    </div>

    @Html.HiddenFor(model => model.LocationId)
    <div class="panel-body">
        <table class="table table-striped table-bordered table-hover table-full-width" id="sample_1">
            <thead>
                <tr>
                    <td>Registered Name</td>
                    <th>Location Name </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.Municipality</td>
                    <td>@Model.Province</td>
                    <td>
                        @using (Html.BeginForm("DeleteCompanyServiceArea", "Company", new { CompanyServiceAreaId = Model.MunicipalityId, CompanyId = Model.CompanyId, municipalityId = Model.MunicipalityId, locationId = Model.LocationId }))
                        { 
                            <a href="#@Model.MunicipalityId" class="btn btn-xs btn-red" data-toggle="modal"><i class="fa fa-trash"></i></a>

                            <div id="@Model.MunicipalityId" class="modal fade" tabindex="-1" data-focus-on="input:first" style="display: none;">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                        &times;
                                    </button>
                                    <h4 class="modal-title"><i class="fa fa fa-trash-o"></i></h4>
                                </div>
                                <div class="modal-body">
                                    <p>Are you sure you want to delete this item?</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" data-dismiss="modal" class="btn btn-default">
                                        Close
                                    </button>
                                    <input type="submit" name="submitbtn" class="btn btn-red tooltips" data-placement="top" data-original-title="Remove" value="Remove" />
                                </div>
                            </div>
                        }
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>





