

@model ClientManagement.DomainModel.AreaModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    MenuSelected('AdminInformation');
</script>

<link href="~/Content/StyleSheet.css" rel="stylesheet" />

<div class="tabbable">
    <ul id="myTab" class="nav nav-tabs tab-bricky">
        <li class="active">
            <a href="#panel_tab1" data-toggle="tab">Upload Statement</a>
        </li>
        <li>
            <a href="#panel_tab2" data-toggle="tab">Allocated Statements</a>
        </li>
        <li>
            <a href="#panel_tab2" data-toggle="tab">Unallocated Statements</a>
        </li>
    </ul>

    <div class="tab-content">

        <div class="tab-pane in active" id="panel_tab1">

            <div class="panel-heading">
                <i></i>Area Details
                <div class="panel-tools">
                    <a class="btn btn-xs btn-green" href="@Url.Action("CreateArea", "Area", new { AreaId = Model.AreaId })"><i class="fa fa-plus"></i></a>
                </div>
            </div>
            <div class="tab-content">

                <table class="table table-striped table-bordered table-hover table-full-width" id="sample_1">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.AreaList)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>
                                    @using (Html.BeginForm("CreateEditArea", "Area", new { AreaId = item.AreaId }))
                                    {
                                        <button class="btn btn-xs btn-primary" name="submitbtn" type="submit" data-original-title="Edit" value="Edit">
                                            <i class="fa fa-pencil-square-o"></i>
                                        </button>

                                        <a href="#@item.AreaId" class="btn btn-xs btn-red" data-toggle="modal"><i class="fa fa-trash-o"></i></a>

                                        <div class="modal fade" id="@item.AreaId" data-backdrop="static" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div id="users" class="modal-body">
                                                        <p>Are you sure you want to delete this item?</p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button aria-hidden="true" data-dismiss="modal" class="btn btn-sm btn-default">
                                                            Close
                                                        </button>
                                                        <input type="submit" name="submitbtn" class="btn btn-red tooltips" data-placement="top" data-original-title="Remove" value="Remove" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>






