@model ClientManagement.DomainModel.SMSTemplateModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}  

<script>
    MenuSelected('AdminInformation');
</script>

<link href="~/Content/StyleSheet.css" rel="stylesheet" />

<div class="panel-heading">
    <i></i>SMS Template Details
    <div class="panel-tools">
        <a class="btn btn-xs btn-green" href="@Url.Action("CreateSMSTemplate", "SMSTemplate", new { SMSTemplateId = Model.SMSTemplateId })"><i class="fa fa-plus"></i></a>
    </div>
</div>
<div class="tab-content">
    <table class="table table-striped table-bordered table-hover table-full-width" id="sample_1">
        <thead>
            <tr>
                <th>Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.SMSTemplateList)
            {
                <tr>
                    <td>@item.Message</td>
                    <td>
                        @using (Html.BeginForm("CreateEditSMSTemplate", "SMSTemplate", new { SMSTemplateId = item.SMSTemplateId }))
                        {
                            @*<input type="submit" name="submitbtn" class="btn btn-xs btn-primary tooltips" data-placement="top" data-original-title="Edit" value="Edit" />*@

                            <button class="btn btn-xs btn-primary" name="submitbtn" type="submit" data-original-title="Edit" value="Edit">
                                <i class="fa fa-pencil-square-o"></i>
                            </button>

                            <a href="#@item.SMSTemplateId" class="btn btn-xs btn-red" data-toggle="modal"><i class="fa fa-trash-o"></i></a>

                            <div class="modal fade" id="@item.SMSTemplateId" data-backdrop="static" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div id="users" class="modal-body">
                                            <p>Are you sure you want to delete this item?</p>
                                        </div>
                                        <div class="modal-footer">
                                            <button aria-hidden="true" data-dismiss="modal" class="btn btn-sm btn-default">
                                                Close
                                            </button>
                                            <input type="submit" name="submitbtn" class="btn btn-red tooltips" data-placement="top" data-original-title="Remove" value="Remove" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>




