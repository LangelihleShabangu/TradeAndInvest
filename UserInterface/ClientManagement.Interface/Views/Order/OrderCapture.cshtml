@model ClientManagement.DomainModel.OrderModel
@{
    ViewBag.Breadcramb = "Order Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    MenuSelected('TradeCentre');
</script>


@using (Html.BeginForm("CreateEditOrderData", "Order", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(model => model.OrderId)

<div class="panel panel-inverse">
<div class="panel-heading">
    <div class="panel-heading-btn">
        <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
        <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
        <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
        <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>                       
    </div>
      <strong>Invoice Capture</strong>      
    </div>           

   <div class="panel-body">

            <div class="col-md-12">
                <div class="form-group">
                    <label class="control-label">
                        Invoice Date   : <span class="symbol required"></span>
                    </label>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.OrderDate, new { @class = "form-control",id="datepicker-autoClose", @placeholder = "Order Date" })
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group">
                    <label class="control-label">
                        Status :
                    </label>
                </div>
                <div class="form-group">
                    @Html.DropDownList("StatusId", new SelectList(ClientManagement.BusinessLogic.GlobalAmin.GetStatusDataInfo(Model.StatusList), "Value", "Text", Model.StatusId), new { @class = "form-control selectpicker"})
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group">
                    <label class="control-label">
                        Client :
                    </label>
                </div>
                <div class="form-group">
                    @Html.DropDownList("ClientId", new SelectList(ClientManagement.BusinessLogic.GlobalAmin.GetClientDataInfo(Model.ClientList), "Value", "Text", Model.BuyerId), new { @class = "form-control search-select" })
                </div>
            </div>

            <div class="col-md-12">
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <button class="btn btn-sm btn-success" type="submit">Save</button>
            </div>
        </div>
    </div>
}



