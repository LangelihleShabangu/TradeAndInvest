@model ClientManagement.DomainModel.AreaModel 
@{
    ViewBag.Breadcramb = "Area Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("CreateEditAreaData", "Area", FormMethod.Post, new { enctype = "multipart/form-data" }))
{         
    @Html.HiddenFor(model => model.AreaId)  
    <link href="~/Content/StyleSheet.css" rel="stylesheet" />

 <div class="panel panel-inverse">
        <div class="panel-heading">
            <div class="panel-heading-btn">
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>                
            </div>
            <h4 class="panel-title">Area Details</h4>
        </div>       

       <div class="panel-body">        

            <div class="col-md-12">
                <div class="form-group">
                    <label class="control-label">
                        Name : <span class="symbol required"></span>
                    </label>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Name" })
                </div>
            </div>
            <div class="col-md-12">
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <button class="btn btn-sm btn-success" type="submit">Save</button>
            </div>
        </div>
    </div>
}



