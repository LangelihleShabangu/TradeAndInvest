@model ClientManagement.DomainModel.PaymentInfoReportModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    MenuSelected('Vehicle');
</script>

<link href="~/Content/StyleSheet.css" rel="stylesheet" />

<div class="panel panel-default" >
        <div class="panel-heading">
            <i></i>Payments Details Report            
        </div>
    <div class="panel-body">
        @using (Html.BeginForm("GeneratePaymentReport", "Report"))
        {
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">
                        Start Date :
                    </label>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.StartDate, new { @class = "form-control date-picker", @placeholder = "Start Date " })
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">
                        End Date :
                    </label>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.EndDate, new { @class = "form-control date-picker", @placeholder = "End Date " })
                </div>
            </div>           
            
            
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">
                        *
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" name="submitbtn" class="btn btn-sm btn-success" data-placement="top" data-original-title="Generate Report" value="View Report" />
                </div>
            </div>
        }
    </div>

    <div class="col-md-12">
        <div class="panel panel-default" style="border:ridge; border-color:black">

            <div class="panel-heading">
                <i></i><em><strong>Payment</strong> </em>
                <div class="panel-tools">
                    <a class="btn btn-xs btn-green" href="">R @Model.PaymentPurchaseInfoReportList.Sum(f => f.Amount).ToString("#0.00")</a>
                </div>
            </div>

            <div class="panel-body">

                <table class="table table-striped table-bordered table-hover table-full-width" id="sample_11">
                    <thead>
                        <tr>                           
                            <th>Payment Date</th>
                            <th>Payment Type</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.PaymentPurchaseInfoReportList)
                        {
                            <tr>
                                <td>@item.CreatedDate</td>
                                <td>@item.PaymentType</td>                                
                                <td>@item.Amount</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <br />
</div>









