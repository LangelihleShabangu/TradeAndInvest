@model List<Techhill.Framework.DomainTypes.Account.UserProfileModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Breadcramb = "Dashboard";
}

<script src="@Url.Content("https://code.jquery.com/jquery-3.3.1.js")"></script>
<script src="@Url.Content("https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js")"></script>


<script>
    $(document).ready(function() {
    $('#example').DataTable();
    } );
</script>


<div class="kt-portlet kt-portlet--mobile">
	<div class="kt-portlet__head">
		<div class="kt-portlet__head-label">
			<h3 class="kt-portlet__head-title">
				Users Information
			</h3>
		</div>
		<div class="kt-portlet__head-toolbar">
			<div class="kt-portlet__head-toolbar-wrapper">
				<div class="dropdown dropdown-inline">
					<button type="button" class="btn btn-primary btn-sm" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						Menu
					</button>
					<div class="dropdown-menu dropdown-menu-right">
						<ul class="kt-nav">
							<li class="kt-nav__section kt-nav__section--first">
								<span class="kt-nav__section-text">Menu Tools</span>
							</li>                           

							<li class="kt-nav__item">
								<a href="@Url.Action("EditPatient", new { id = 0 })" class="kt-nav__link">
									<i class="kt-nav__link-icon la la-plus"></i>
									<span class="kt-nav__link-text">Add Patient</span>
								</a>
							</li>                            
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="kt-portlet__body">        

        <table id="example" class="table table-striped- table-bordered table-hover table-checkable" style="width:100%">
	
			<thead>
				<tr>
					<th>Username</th>
                    <th>Firstname</th>
                    <th>Surname</th>
                    <th>Email</th>
                    <th>Details</th>
				</tr>
			</thead>
			<tbody>  
                @foreach (var user in Model)
                {                                                 
				<tr>
					<td>@user.UserName</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>
                            <a href="@Url.Action("EditUser", new { id = @user.UserProfileID })" class="btn btn-primary btn-sm"><i style="margin-right: 6px" class="fa fa-desktop"></i>Open</a>
                            <a href="@Url.Action("UserRole", new { id = @user.UserProfileID })" class="btn btn-primary btn-sm"><i style="margin-right: 6px" class="fa fa-lock"></i>Access</a>
                        </td>
				</tr>
                }
                </tbody>	
		</table>

		<!--end: Datatable -->

	</div>
</div>
